@model List<RestaurantTable>
@{
    ViewBag.Title = "Tables";
}

@* THIS IS RESTAURANT TABLES *@

@* MAKE FUNCTION `AddRestaurantTable` here *@

<div class="add-container">

    <h1 class="add-text">List of Tables</h1>

    <a asp-action="AddRestaurantTable" class="btn menu-add-btn">Add New Table</a>

    <table class="table table-striped">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Reservation(s)</th>
        <th>Edit</th>
        <th>Delete</th>
        </thead>

        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.RestaurantTableId</td>
                    <td>@table.Name</td>
                    @* Implement below methods *@
                    <td>
                        <a asp-action="ViewReservations" asp-controller="RestaurantTable" asp-route-restaurantTableId="@table.RestaurantTableId" class="btn edit-menu-btn">View Reservation(s)</a>
                    </td>
                    <td>
                        <a asp-action="EditRestaurantTable" asp-controller="RestaurantTable" asp-route-restaurantTableId="@table.RestaurantTableId" class="btn edit-menu-btn">Edit Table</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="RestaurantTable" asp-route-restaurantTableId="@table.RestaurantTableId" class="btn edit-menu-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
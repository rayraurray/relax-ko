@model List<MenuItem>
@{
    ViewBag.Title = "Menu Items";
}

@* THIS IS MENU ITEM *@

<a asp-action="AssignMenuItem" class="btn btn-primary">Add New Menu Item</a>

<h1>List of Menu Items</h1>

<form asp-action="ChangeMenus" method="post" id="menuForm">
    <div>
        <label class="form-label">Filter With Menu</label>

        <select class="form-control" id="menuSelect" name="menuId">

            <option value="">Select Menu</option>

            @foreach (Menu menu in ViewBag.Menus)
            {
                if (ViewBag.SelectedMenus != null && ViewBag.SelectedMenus == menu.MenuId)
                {
                    <option value="@menu.MenuId" selected>@menu.Name</option>
                }
                else
                {
                    <option value="@menu.MenuId">@menu.Name</option>
                }
            }

        </select>
    </div>

    <script>
        var selectElement = document.getElementById('menuSelect');
        //Add event listener for change event
        selectElement.addEventListener('change', function () 
        {
            var formElement = document.getElementById('menuForm');
            formElement.submit();
        }
        )
    </script>

</form>

<table class="table table-striped">
    <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Menus</th>
    <th>Delete</th>
    </thead>

    <tbody>
        @foreach (var menuItem in Model)
        {
            <tr>
                <td>@menuItem.MenuItemId</td>
                <td>@menuItem.Name</td>
                <td>@menuItem.Description</td>
                <td>$@menuItem.Price</td>
                <td>
                    <a asp-action="EditMenuItem" asp-controller="MenuItem" asp-route-menuItemId="@menuItem.MenuItemId" class="btn btn-info">Edit Menu Items</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="MenuItem" asp-route-menuItemId="@menuItem.MenuItemId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
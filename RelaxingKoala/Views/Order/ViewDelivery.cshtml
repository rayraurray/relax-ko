@model Delivery
@{
    ViewBag.Title = "Delivery Details";
}

<div class="add-container">

    <h1 class="add-text">Delivery Details</h1>

    <table class="table table-striped">
        <thead>
        <th>Delivery ID</th>
        <th>Delivery Time</th>
        <th>Delivery Address</th>
        <th>Contact Number</th>
        <th>Order</th>
        </thead>

        <tbody>
            <tr>
                <td>@Model.DeliveryId</td>
                <td>@Model.DeliveryTime</td>
                <td>@Model.DeliveryAddress</td>
                <td>@Model.ContactNumber</td>
                <td>
                    <a asp-action="ViewOrder" asp-controller="Delivery" asp-route-customerId="@Model.OrderId" class="btn edit-menu-btn">View Order</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
@model Statistics
<div class="add-container">
    <h1 class="delete-text">Add New Statistics</h1>

    <form asp-action="AddStatistics" method="post">

        @foreach (var menuItem in ViewBag.MenuItems as List<MenuItem>)
        {
            <div class="form-check">
                <input type="radio" class="form-check-input" id="@menuItem.MenuItemId" name="assignedMenuItem" value="@menuItem.MenuItemId" />
                <label class="form-check-label" for="@menuItem.MenuItemId">@menuItem.Name</label>
            </div>
        }

        <div>
            <label asp-for="NumberOfOrders" class="menu-name-text">Number Of Orders</label>
            <input asp-for="NumberOfOrders" class="form-control" />
        </div>

        <div>
            <label asp-for="AverageOrderTime" class="menu-name-text">Average Order Time</label>
            <input asp-for="AverageOrderTime" class="form-control" />
        </div>

        <div>
            <label asp-for="RecordedDate" class="menu-name-text">Recorded Date</label>
            <input asp-for="RecordedDate" class="form-control" type="date" />
        </div>

        <button type="submit" class="btn menu-add-btn">Add Statistics</button>

    </form>
</div>
